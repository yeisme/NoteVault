        {
            "label": "Generate Golang Code",
            "type": "shell",
            "command": "just gen-go",
            "group": "build",
            "problemMatcher": []
        },
        {
            "label": "Hot Reload",
            "type": "shell",
            "command": "just hot",
            "group": "build",
            "problemMatcher": []
        },
        {
            "label": "Snapshot Build",
            "type": "shell",
            "command": "just snapshot",
            "group": "build",
